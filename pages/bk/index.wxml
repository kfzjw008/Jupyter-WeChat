            <button class="weui-btn mini-btn" type="default" size="mini" id="武仙座" bindtap="hideInput2">武仙座</button>
            </view>
        </view>
          <view class="weui-flex">
            <view class="weui-flex__item">
            <button class="weui-btn mini-btn" type="default" size="mini" id="金牛座"  bindtap="hideInput2">金牛座</button>
            </view>
            <view class="weui-flex__item">
            <button class="weui-btn mini-btn" type="default" size="mini" id="仙女座"  bindtap="hideInput2" >仙女座</button>
            </view>
            <view class="weui-flex__item">
            <button class="weui-btn mini-btn" type="default" size="mini" id="人马座" bindtap="hideInput2">人马座</button>
            </view>
        </view>
        <view class="weui-flex">
            <view class="weui-flex__item">
            <button class="weui-btn mini-btn" type="default" size="mini" id="御夫座"  bindtap="hideInput2">御夫座</button>
