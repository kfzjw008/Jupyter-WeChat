            </view>
            
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">限时时间</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" bindinput="wd" placeholder="请输入数字，单位：秒" type="number"  />
                </view>
            </view>
      

        
        </view>
